---
import '../assets/css/main.css'

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description}/>
